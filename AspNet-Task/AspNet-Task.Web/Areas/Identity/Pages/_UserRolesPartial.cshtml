@using AspNet_Task.Web.Models
@model List<UserRoleViewModel>

<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userRole in Model)
        {
            <tr>
                <td>@userRole.Email</td>
                <td>@string.Join(", ", userRole.Roles)</td>
            </tr>
        }
    </tbody>
</table>

